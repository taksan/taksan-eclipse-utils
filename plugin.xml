<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.editors.templates">
      <template
            autoinsert="true"
            contextTypeId="java"
            id="brundle.primitiveColoring.template"
            name="primitiva">
         <pattern>
/* PRIMITIVE RESERVATION BEGIN */

/* PRIMITIVE RESERVATION END */
         </pattern>
      </template>
   </extension>
   
   
   	<extension
	    id="brundle.primitivecoloring.primitiveMarkerMissing"
	    name="Primitive Marker Missing"
	    point="org.eclipse.core.resources.markers">
	  <super
	    type="org.eclipse.core.resources.problemmarker">
	  </super>
	</extension>
   
	<extension
	    id="brundle.primitivecoloring.primitiveMarker"
	    name="Primitive Marker"
	    point="org.eclipse.core.resources.markers">
	  <super
	    type="org.eclipse.core.resources.textmarker">
	  </super>
	</extension>
	<extension
	      point="org.eclipse.ui.editors.annotationTypes">
	   <type
	         markerType="brundle.primitivecoloring.primitiveMarker"
	         name="brundle.primitivecoloring.primitiveMarker">
	   </type>
	   <type
	         markerType="brundle.primitivecoloring.primitiveMarkerMissing"
	         name="brundle.primitivecoloring.primitiveMarkerMissing">
	   </type>	   
	</extension>
	
	<extension
	      point="org.eclipse.ui.editors.markerAnnotationSpecification"
	      id="brundle.primitiveMarker"
	      name="primitiveMarker">
	   <specification
	         annotationType="brundle.primitivecoloring.primitiveMarker"
	         colorPreferenceKey="brundle.primitivecoloring.primitiveMarker.color"
	         colorPreferenceValue="192,255,192"
	         contributesToHeader="false"
	         highlightPreferenceKey="brundle.primitivecoloring.primitiveMarker.highlight"
	         highlightPreferenceValue="true"
	         includeOnPreferencePage="true"
	         label="Primitive Marker"
	         overviewRulerPreferenceKey="brundle.primitivecoloring.primitiveMarker.overview"
	         overviewRulerPreferenceValue="true"
	         presentationLayer="0"
	         textPreferenceKey="brundle.primitivecoloring.primitiveMarker.text"
	         textPreferenceValue="true"
	         textStylePreferenceValue="BOX"
	         verticalRulerPreferenceKey="brundle.primitivecoloring.primitiveMarker.ruler"
	         verticalRulerPreferenceValue="true"
	         >
	   </specification>
	   
	   <specification
	         annotationType="brundle.primitivecoloring.primitiveMarkerMissing"
	         colorPreferenceKey="brundle.primitivecoloring.primitiveMarkerMissing.color"
	         colorPreferenceValue="255,0,0"
	         contributesToHeader="false"
	         highlightPreferenceKey="brundle.primitivecoloring.primitiveMarkerMissing.highlight"
	         highlightPreferenceValue="false"
	         includeOnPreferencePage="true"
	         label="Primitive Marker End Missing"
	         overviewRulerPreferenceKey="brundle.primitivecoloring.primitiveMarkerMissing.overview"
	         overviewRulerPreferenceValue="true"
	         presentationLayer="0"
	         textPreferenceKey="brundle.primitivecoloring.primitiveMarkerMissing.text"
	         textPreferenceValue="true"
	         textStylePreferenceValue="SQUIGGLES"
	         verticalRulerPreferenceKey="brundle.primitivecoloring.primitiveMarkerMissing.ruler"
	         verticalRulerPreferenceValue="true"
	         >
	   </specification>
	</extension>
	
	
	  <extension
	        point="org.eclipse.ui.startup">
	     <startup
	           class="brundle.primitivecoloring.Startup">
	     </startup>
	  </extension>
	  
    <extension
          point = "org.eclipse.ui.newWizards">
        <category
           id = "brundle.eclipse-utils"
           parentCategory="org.eclipse.ui.Examples"
           name="Brundle">
        </category>
        <wizard
           id = "objective_utils.actions.CreateTestAction"
           name = "Create test counterpart for"
           class="objective_utils.actions.CreateTestWizard"
           category="org.eclipse.ui.Examples/org.eclipse.ui.examples.readmetool.new"
           icon="$nl$/icons/full/etool16/new_untitled_text_file.gif"
           canFinishEarly="true"
           hasPages="false" 
           >
           <description>Creates a test class for the given file</description>
           <selection class="org.eclipse.core.runtime.IAdaptable"/>
        </wizard>
    </extension>
	<extension point="org.eclipse.ui.bindings">
		<key sequence="Ctrl+\"
			commandId="objective_utils.actions.CreateTestAction"
			schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
			contextId="org.eclipse.jdt.ui.javaEditorScope"/>
	</extension>
 <extension
       point="org.eclipse.ui.commands">
 </extension>    
</plugin>
